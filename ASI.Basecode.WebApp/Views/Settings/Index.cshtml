@{
    Layout = "_Layout";
    ViewData["Title"] = "Settings Page";
}

@section styles {
    <link rel="stylesheet" href="~/css/settings.css" />
}

<!-- Sidebar and Content -->
<div class="flex min-h-screen mt-5">
    <!-- Main Content Area -->
    <div class="flex-1 p-6 bg-gray-50 dark:bg-gray-800 ">
     
        <!-- Use an ID if needed for specific CSS targeting -->
        <!-- Settings Header -->
        <div class="my-4">
            <h2 class="font-semibold text-2xl dark:text-white">Settings</h2>
        </div>

        <!-- Profile Section -->
        <div class="p-6 shadow-md rounded-lg mb-6 bg-gray-50 dark:bg-gray-700">
            <h3 class="text-lg font-semibold mb-4 dark:text-white">Profile</h3>
            <div class="flex items-center">
                <!-- Profile Picture -->
                <div class="text-center">
                    <img id="profile-picture" class="w-20 h-20 rounded-full mx-auto" src="~/img/profile-logo.png" alt="Profile Picture" />
                </div>

                <!-- Change Picture Button -->
                <div class="ml-6">
                    <input type="file" id="file-input" class="hidden" accept="image/*">
                    <button id="change-picture-btn" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none">
                        Change Profile Picture
                    </button>
                </div>
            </div>

            <!-- Name Fields -->
            <div class="mt-6 grid grid-cols-2 gap-4">
                <div>
                    <label for="first-name" class="block text-gray-700 dark:text-gray-300">First Name</label>
                    <input type="text" id="first-name" name="first-name" class="w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="Enter first name">
                </div>
                <div>
                    <label for="last-name" class="block text-gray-700 dark:text-gray-300">Last Name</label>
                    <input type="text" id="last-name" name="last-name" class="w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="Enter last name">
                </div>
            </div>
        </div>

        <!-- Change Email Section -->
        <div class="p-6 shadow-md rounded-lg mb-6 bg-gray-50 dark:bg-gray-700">
            <h3 class="text-lg font-semibold mb-4 dark:text-white">Email Address</h3>
            <div class="flex justify-between items-center">
                <p class="mb-0 dark:text-gray-300">Your email address is <strong>sample@gmail.com</strong></p>
                <button class="text-blue-500 underline hover:text-blue-700 focus:outline-none">Change</button>
            </div>
        </div>

        <!-- Change Password Section -->
        <div class="p-6 shadow-md rounded-lg mb-6 bg-gray-50 dark:bg-gray-700">
            <h3 class="text-lg font-semibold mb-4 dark:text-white">Password</h3>
            <form>
                <div class="grid grid-cols-3 gap-4 mb-4">
                    <div class="mb-4 relative">
                        <label for="current-password" class="block text-gray-700 dark:text-gray-300">Current Password:</label>
                        <input type="password" id="current-password" name="current-password" class="w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="Enter current password" required />
                        <i id="toggle-current-password" class="fas fa-eye-slash absolute bottom-1.5 right-3 transform -translate-y-1/2 cursor-pointer text-gray-500"></i>
                    </div>
                    <div class="mb-4 relative">
                        <label for="new-password" class="block text-gray-700 dark:text-gray-300">New Password:</label>
                        <input type="password" id="new-password" name="new-password" class="w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="Enter new password" required />
                        <i id="toggle-new-password" class="fas fa-eye-slash absolute bottom-1.5 right-3 transform -translate-y-1/2 cursor-pointer text-gray-500"></i>
                    </div>
                    <div class="mb-4 relative">
                        <label for="confirm-password" class="block text-gray-700 dark:text-gray-300">Confirm Password:</label>
                        <input type="password" id="confirm-password" name="confirm-password" class="w-full p-2 border border-gray-300 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="Confirm new password" required />
                        <i id="toggle-confirm-password" class="fas fa-eye-slash absolute bottom-1.5 right-3 transform -translate-y-1/2 cursor-pointer text-gray-500"></i>
                    </div>
                </div>
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none">
                        Save Password
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>




<script src="~/js/settings.js"></script>