@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!-- Navigation Bar -->
<div class="flex flex-col min-h-screen w-20 border-r border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900  ">

    <!-- SpendWise Icon -->
    <div class="p-4 text-center">
        <img class="w-5 h-5 mx-auto" src="~/img/peso.ico" alt="Profile Picture" />
    </div>
    <!-- Profile Picture -->
    <div class="mt-3 text-center">
        <img class="w-8 h-8 rounded-full mx-auto" src="~/img/profile-logo.png" alt="Profile Picture" />
    </div>
    <!-- Navigation -->
    <nav class="flex-1 pl-2 lg:pl-4 mt-2 overflow-y-auto bg-gray-50 dark:bg-gray-900">
        <ul class="w-full flex flex-col">
            <li class="my-2">
                <a asp-controller="Home" asp-action="Index" class="flex items-center py-3 px-4 rounded-l
                    @(ViewData["Title"] != null && ViewData["Title"].ToString() == "Home Page" ?
                    "active bg-blue-500 text-white border-r-4 border-blue-200  hover:no-underline hover:text-blue-500" :
                    "text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline")">
                    <i class="fas fa-home mr-4"></i>
                </a>
            </li>
            <li class="my-2">
                <a asp-controller="Wallet" asp-action="Index" class="flex items-center py-3 px-4 rounded-l
                    @(ViewData["Title"].ToString() == "Wallet Page" ?
                    "active bg-blue-500 text-white border-r-4 border-blue-200  hover:no-underline hover:text-blue-500" :
                    "text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline")">
                    <i class="fas fa-wallet mr-4"></i>
                </a>
            </li>
            <li class="my-2">
                <a asp-controller="Category" asp-action="Index" class="flex items-center py-3 px-4 rounded-l
                    @(ViewData["Title"].ToString() == "Category Page" ?
                    "active bg-blue-500 text-white border-r-4 border-blue-200  hover:no-underline hover:text-blue-500" :
                    "text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline")">
                    <i class="fas fa-layer-group mr-4"></i>
                </a>
            </li>
            <li class="my-2">
                <a asp-controller="Transaction" asp-action="Index" class="flex items-center py-3 px-4 rounded-l
                    @(ViewData["Title"].ToString() == "Transaction Page" ?
                    "active bg-blue-500 text-white border-r-4 border-blue-200  hover:no-underline hover:text-blue-500" :
                    "text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline")">
                    <i class="fas fa-file-invoice-dollar mr-4"></i>
                </a>
            </li>
            <li class="my-2">
                <a asp-controller="Settings" asp-action="Index" class="flex items-center py-3 px-4 rounded-l
                    @(ViewData["Title"].ToString() == "Settings Page" ?
                    "active bg-blue-500 text-white border-r-4 border-blue-200  hover:no-underline hover:text-blue-500" :
                    "text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline")">
                    <i class="fas fa-cog mr-4"></i>
                </a>
            </li>
            <li class="mt-auto pt-2 my-2">
                <a id="miniLogoutLink" asp-action="SignOutUser" asp-controller="Account" class="flex items-center py-3 px-4 rounded-l text-gray-500 dark:text-gray-500 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-gray-500 hover:no-underline no-underline hover:scale-105 transition-transform duration-200">
                    <i class="fas fa-sign-out-alt mr-4 text-red-500"></i>
                </a>
            </li>
        </ul>
    </nav>

</div>

<script>
    // Logout confirmation dialog
    document.getElementById('miniLogoutLink').addEventListener('click', function (event) {
        event.preventDefault();

        Swal.fire({
            text: "Are you sure you want to log out?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#a6a6a6',
            confirmButtonText: 'Logout'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = this.getAttribute('href');
            }
        });
    });
</script>
