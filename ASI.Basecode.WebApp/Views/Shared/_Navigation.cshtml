﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<link rel="stylesheet" href="~/css/navigation.css" />

<!-- Navigation Bar -->
<div id="main-nav-cont" class="flex flex-col min-h-screen w-100">
    <!-- SpendWise Title -->
    <div class="p-4 text-center">
        <h2 class="mt-2 ml-4 font-medium text-3xl">
            <span class="text-black">Spend</span><span class="text-blue-500">Wise</span>
        </h2>
    </div>

    <!-- Profile Picture -->
    <div class="p-4 text-center">
        <img class="w-20 h-20 rounded-full mx-auto" src="~/img/profile-logo.png" alt="Profile Picture" />
    </div>

    <!-- Navigation -->
    <nav id="navigation-content" class="flex-1 pl-4">
        <ul>
            <li id="home-item">
                <a asp-controller="Home" asp-action="Index" class="flex items-center @(ViewData["Title"].ToString() == "Home Page" ? "active" : "")">
                    <i class="fas fa-home mr-3"></i> Home
                </a>
            </li>
            <li id="account-item">
                <a asp-controller="DebitLiabilities" asp-action="Index" class="flex items-center @(ViewData["Title"].ToString() == "Account Page" ? "active" : "")">
                    <i class="fas fa-user mr-3"></i> Account
                </a>
            </li>
            <li id="category-item">
                <a asp-controller="Category" asp-action="Index" class="flex items-center @(ViewData["Title"].ToString() == "Category Page" ? "active" : "")">
                    <i class="fas fa-layer-group mr-3"></i> Category
                </a>
            </li>
            <li id="settings-item">
                <a asp-controller="Settings" asp-action="Index" class="flex items-center @(ViewData["Title"].ToString() == "Settings Page" ? "active" : "")">
                    <i class="fas fa-cog mr-3"></i> Settings
                </a>
            </li>
            <li class="mt-4" id="logout-item">
                <a href="#" class="flex items-center hover:text-red-500">
                    <i class="fas fa-sign-out-alt mr-3"></i> Log out
                </a>
            </li>
        </ul>
    </nav>
</div>
