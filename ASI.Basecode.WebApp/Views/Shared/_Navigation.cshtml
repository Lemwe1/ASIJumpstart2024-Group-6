@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!-- Navigation Bar -->
<div id="main-nav-cont" class="flex flex-col min-h-screen w-64">
    <!-- SpendWise Title -->
    <div class="p-4 text-center">
        <h2 class="mt-2 font-medium text-3xl">
            <span class="text-black">Spend</span><span class="text-blue-500">Wise</span>
        </h2>
    </div>

    <!-- Profile Picture -->
    <div class="p-4 text-center">
        <img class="w-20 h-20 rounded-full mx-auto" src="~/img/profile-logo.png" alt="Profile Picture" />
    </div>

    <!-- Navigation -->
    <nav id="navigation-content" class="flex-1 pl-4 lg:pl-6 mt-3 overflow-y-auto">
        <ul class="w-full flex flex-col">
            <li class="my-2">
                <a asp-controller="Home" asp-action="Index" class="flex items-center  py-3 px-4 rounded-l hover:bg-gray-100 @(ViewData["Title"] != null && ViewData["Title"].ToString() == "Home Page" ? "active bg-gray-100" : "")">
                    <i class="fas fa-home mr-4"></i> Home
                </a>
            </li>
            <li class="my-2">
                <a asp-controller="DebitLiabilities" asp-action="Index" class="flex items-center  py-3 px-4 rounded-l hover:bg-gray-100 @(ViewData["Title"].ToString() == "Account Page" ? "active bg-gray-100" : "")">
                    <i class="fas fa-user mr-4"></i> Account
                </a>
            </li>

            <li class="my-2">
                <a asp-controller="Category" asp-action="Index" class="flex items-center  py-3 px-4 rounded-l hover:bg-gray-100 @(ViewData["Title"].ToString() == "Category Page" ? "active bg-gray-100" : "")">
                    <i class="fas fa-layer-group mr-4"></i> Category
                </a>
            </li>

            <li class="my-2">
                <a asp-controller="Transaction" asp-action="Index" class="flex items-center py-3 px-4 rounded-l hover:bg-gray-100 @(ViewData["Title"].ToString() == "Transaction Page" ? "active bg-gray-100" : "")">
                    <i class="fas fa-wallet mr-4"></i> Transactions
                </a>
            </li>

            <li class="my-2">
                <a asp-controller="Settings" asp-action="Index" class="flex items-center  py-3 px-4 rounded-l hover:bg-gray-100 @(ViewData["Title"].ToString() == "Settings Page" ? "active bg-gray-100" : "")">
                    <i class="fas fa-cog mr-4"></i> Settings
                </a>
            </li>
            <li class="mt-auto my-2">
                <a asp-action="SignOutUser" asp-controller="Account" class="flex items-center py-3 px-4 rounded-l hover:bg-gray-100">
                    <i class="fas fa-sign-out-alt mr-4"></i> Log out
                </a>
            </li>
        </ul>
    </nav>
</div>
