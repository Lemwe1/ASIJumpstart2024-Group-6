@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<!-- Sidebar and Content -->
<div class="flex min-h-screen">
    <!-- Main Content Area -->
    <div id="home-content" class="flex-1 p-6">

        <!-- Search Bar -->
        <div class="flex justify-between items-center mt-2">
            <input type="text" placeholder="Search here..." class="w-1/3 p-2 border border-gray-300 rounded-lg">
        </div>
        <!-- Dashboard Header -->
        <div class="my-4">
            <h2 class="text-2xl font-bold">Dashboard</h2>
        </div>

        <!-- Dashboard Cards -->
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="bg-green-500 shadow-md text-white p-6 rounded-lg">
                <h3 class="text-s">Current Balance</h3>
                <p class="mt-10 text-3xl font-bold">₱ 8,200</p>
            </div>
            <div class="bg-red-500 shadow-md text-white p-6 rounded-lg">
                <h3 class="text-s font-bold">Total Expenses</h3>
                <p class="mt-10 text-3xl">₱ 1,500</p>
            </div>
            <div class="bg-blue-500 text-white p-6 rounded-lg">
                <h3 class="text-s font-bold">Total Income</h3>
                <p class="mt-10 text-3xl">₱ 5,210</p>
            </div>
        </div>

        <!-- Trends and Monthly Charts -->
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h4 class="font-bold">Trends</h4>
                <!-- Chart Placeholder -->
            </div>
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h4 class="font-bold">Monthly Expense</h4>
                <!-- Chart Placeholder -->
            </div>
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h4 class="font-bold">Monthly Income</h4>
                <!-- Chart Placeholder -->
            </div>
        </div>

        <div class="relative">
            <!-- Button -->
            <a asp-controller="Transaction" asp-action="Index">
                <button class="fixed bottom-8 right-8 bg-blue-500 text-white w-16 h-16 flex items-center justify-center rounded-full shadow-lg hover:bg-blue-600 focus:outline-none focus:ring-4 focus:ring-blue-300">
                    <i class="fas fa-plus text-2xl"></i>
                </button>
            </a>

            <div id="dialog-message" class="fixed bottom-8 right-24 bg-white border-2 border-blue-200 text-gray-700 text-sm rounded-lg p-3 shadow-l transition-opacity duration-300 opacity-0 mr-2">
                Click to add transaction!
            </div>
        </div>



    </div>
</div>

<script src="~/js/home.js" asp-append-version="true"></script>
