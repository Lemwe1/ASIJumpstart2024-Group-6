@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<!-- Sidebar and Content -->
<div class="flex min-h-screen mt-5 ml-10 ">
    <!-- Main Content Area -->
    <div class="flex-1 p-6 bg-gray-50 container dark:bg-gray-800 text-gray-900 ">

        <!-- Dashboard Header -->
        <div class="my-4">
            <h2 class="text-2xl font-semibold dark:text-white">Dashboard</h2>
        </div>

        <!-- Dashboard Cards -->
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="bg-green-500 border-2 border-black shadow-md text-white p-6 rounded-lg">
                <h3 class="text-s">Current Balance</h3>
                <p class="mt-10 text-3xl font-bold">₱&nbsp;@ViewBag.TotalDebit.ToString("0.00")</p>
            </div>
            <div class="bg-red-500 border-2 border-black shadow-md text-white p-6 rounded-lg">
                <h3 class="text-s ">Total Expenses</h3>
                <p class="mt-10 text-3xl font-bold">
                    <i class="fas fa-angles-up text-3xl font-bold mr-4"></i>₱&nbsp;@ViewBag.TotalExpense.ToString("0.00")
                </p>
            </div>
            <div class="bg-blue-500 border-2 border-black text-white p-6 rounded-lg">
                <h3 class="text-s ">Total Income</h3>
                <p class="mt-10 text-3xl font-bold">
                    <i class="fas fa-angles-down text-3xl font-bold mr-4"></i>₱&nbsp;@ViewBag.TotalIncome.ToString("0.00")
                </p>
            </div>
        </div>


        <!-- Trends and Monthly Charts -->
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="bg-gray-50 dark:bg-gray-700 dark:text-white p-6 shadow-md rounded-lg">
                <h4 class="font-semibold">Trends</h4>
                <!-- Chart Placeholder -->
            </div>
            <div class="bg-gray-50 dark:bg-gray-700 dark:text-white p-6 shadow-md rounded-lg">
                <h4 class="font-semibold">Monthly Expense</h4>
                <!-- Chart Placeholder -->
            </div>
            <div class="bg-gray-50 dark:bg-gray-700 dark:text-white p-6 shadow-md rounded-lg">
                <h4 class="font-semibold">Monthly Income</h4>
                <!-- Chart Placeholder -->
            </div>
        </div>

        <div class="relative">
            <!-- Button -->
            <a asp-controller="Transaction" asp-action="Index">
                <button class="fixed bottom-8 right-8 bg-blue-500 text-white w-16 h-16 flex items-center justify-center rounded-full shadow-lg hover:bg-blue-600 focus:outline-none focus:ring-4 focus:ring-blue-300">
                    <i class="fas fa-plus text-2xl"></i>
                </button>
            </a>

            <a asp-controller="Transaction" asp-action="Index">
                <div id="dialog-message" class="fixed bottom-8 right-24 bg-gray-100 dark:bg-gray-700 dark:text-white border-2 border-blue-200 text-gray-700 text-sm rounded-lg p-3 shadow-l transition-opacity duration-300 opacity-0 mr-2">
                    Click me to add transaction!
                </div>
            </a>

        </div>



    </div>
</div>

<script src="~/js/home.js" asp-append-version="true"></script>