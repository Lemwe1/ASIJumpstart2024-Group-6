@{
    ViewData["Title"] = "Home Page";
}

<!-- Sidebar and Content -->
<div class="flex min-h-screen">

    <!-- Sidebar -->
    <div class="w-64 bg-blue-100 shadow-lg flex flex-col">

        <!-- SpendWise Title -->
        <div class="p-4">
            <h2 class="mt-2 ml-4 font-bold text-lg">
                <span class="text-black">Spend</span><span class="text-blue-500">Wise</span>
            </h2>
        </div>

        <!-- Profile Picture -->
        <div class="p-4 text-center">
            <img class="w-20 h-20 rounded-full mx-auto" src="~/images/profile-picture.jpg" alt="Profile Picture">
        </div>

        <!-- Navigation -->
        <nav class="flex-1 mb-4 pl-4">
            <!-- Same padding-left as SpendWise title for alignment -->
            <ul>
                <li class="p-2">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center text-gray-700 hover:text-blue-500 @(ViewData["Title"].ToString() == "Home Page" ? "font-bold" : "")">
                        <i class="fas fa-home mr-3"></i> Home
                    </a>
                </li>
                <li class="p-2">
                    <a asp-controller="DebitLiabilities" asp-action="Index" class="flex items-center text-gray-700 hover:text-blue-500 @(ViewData["Title"].ToString() == "Account" ? "font-bold" : "")">
                        <i class="fas fa-wallet mr-3"></i> Account
                    </a>
                </li>
                <li class="p-2">
                    <a asp-controller="Category" asp-action="Index" class="flex items-center text-gray-700 hover:text-blue-500 @(ViewData["Title"].ToString() == "Category" ? "font-bold" : "")">
                        <i class="fas fa-layer-group mr-3"></i> Category
                    </a>
                </li>

                <li class="p-2">
                    <a asp-controller="Settings" asp-action="Index" class="flex items-center text-gray-700 hover:text-blue-500 @(ViewData["Title"].ToString() == "Settings" ? "font-bold" : "")">
                        <i class="fas fa-cog mr-3"></i> Settings
                    </a>
                </li>

                <!-- Log out button with a bit of spacing -->
                <li class="p-2 mt-4">
                    <a href="#" class="flex items-center text-gray-700 hover:text-red-500">
                        <i class="fas fa-sign-out-alt mr-3"></i> Log out
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Content -->
    <div class="flex-1 p-6 bg-white">
        <div class="text-center">
            <h1 class="text-4xl font-bold">Welcome</h1>
            <p class="mt-4 text-lg">Learn about <a class="text-blue-500 underline" href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
    </div>

</div>
