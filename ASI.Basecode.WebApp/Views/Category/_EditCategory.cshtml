<!-- Edit Category Modal -->
<div id="editCategoryModal" class="modal fixed inset-0 bg-gray-800 bg-opacity-50 items-center justify-center hidden overflow-auto" role="dialog" aria-modal="true" aria-labelledby="editCategoryTitle">
    <div class="modal-content dark:bg-gray-700 p-6 rounded-lg shadow-lg w-full max-w-lg mx-auto overflow-y-auto">
        <div class="flex justify-between items-center mb-4">
            <h2 id="editCategoryTitle" class="text-2xl font-bold text-black dark:text-white">Edit Category</h2>
            <button id="closeEditModal" class="absolute top-2 right-2 text-gray-400 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 w-10 rounded-full" aria-label="Close Edit Category Modal">
                <i class="fas fa-times dark:text-white"></i>
            </button>
        </div>
        <p class="mb-4 text-sm text-gray-500 dark:text-gray-400 dark:text-gray-300">Fill out all the fields below to edit the category.</p>

        <!-- Form -->
        <form id="editCategoryForm">
            @Html.AntiForgeryToken()

            <!-- Hidden Field for Category ID -->
            <input type="hidden" name="CategoryId" id="editId" />

            <!-- Type Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 inline">Type</label>
                <span class="text-gray-500 dark:text-gray-400 text-xs inline-block mb-2 dark:text-gray-300">(Select A type)</span>
                <div class="flex space-x-4">
                    <button type="button" id="editExpenseButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800">Expense</button>
                    <button type="button" id="editIncomeButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800">Income</button>
                </div>
                <input type="hidden" name="Type" id="editTypeInput" />
            </div>

            <!-- Name Field -->
            <div class="mb-6">
                <label for="editName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                <input type="text" name="Name" id="editName" placeholder="Enter Name" class="mt-1 block w-full px-4 py-2 border rounded-md dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
            </div>

            <!-- Icon Field -->
            <div class="mb-6">
                <label for="editIcon" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Icon</label>
                <select name="Icon" id="editIcon" class="mt-1 block w-full px-4 py-2 border rounded-md dark:bg-gray-700 text-gray-900 dark:text-white">
                    <option value="" disabled>Select Icon</option>
                    <option value="💰" class="dark:text-gray-400 dark:text-white">💰 Money Bag</option>
                    <option value="💸" class="dark:text-gray-400 dark:text-white">💸 Flying Cash</option>
                    <option value="💵" class="dark:text-gray-400 dark:text-white">💵 Cash</option>
                    <option value="🍕" class="dark:text-gray-400 dark:text-white">🍕 Pizza</option>
                    <option value="🍎" class="dark:text-white">🍎 Apple</option>
                    <option value="🛍️" class="dark:text-gray-400 dark:text-white">🛍️ Shopping Bag</option>
                    <option value="⚡" class="dark:text-gray-400 dark:text-white">⚡ Bolt</option>
                    <option value="🚗" class="dark:text-gray-400 dark:text-white">🚗 Car</option>
                </select>
            </div>

            <!-- Color Picker Field -->
            <div class="mb-6">
                <label for="editColorPicker" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Select Color</label>
                <input type="color" name="Color" id="editColorPicker" class="mt-1 block w-full h-12 border rounded-md dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
            </div>

            <!-- Error Message Display -->
            <div id="errorMessage" class="mb-4 text-red-500"></div>

            <!-- Action Buttons -->
            <div class="flex mt-6 justify-between w-full space-x-4">
                <button type="button" id="deleteButton" class="bg-red-500 text-white hover:bg-red-600 p-3 rounded-md w-full">
                    Delete
                </button>
                <button type="submit" class="bg-blue-500 text-white hover:bg-blue-700 p-3 rounded-md w-full">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
