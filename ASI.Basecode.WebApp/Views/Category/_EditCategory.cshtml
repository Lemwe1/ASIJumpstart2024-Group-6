@model IEnumerable<ASI.Basecode.WebApp.Models.CategoryViewModel>

@section Styles {
    <link href="~/css/Category.css" rel="stylesheet" />
}

<!-- Edit Category Modal -->
<div id="editCategoryModal" class="modal fixed inset-0 bg-gray-800 bg-opacity-50  items-center justify-center hidden" role="dialog" aria-modal="true" aria-labelledby="editCategoryTitle">
    <div class="modal-content  dark:bg-gray-800 p-6 rounded-lg shadow-lg w-full max-w-md mx-auto dark:border dark:border-gray-700">
        <div class="flex justify-between items-center mb-4">
            <h2 id="editCategoryTitle" class="text-2xl font-bold text-black dark:text-white">Edit Category</h2>
            <button id="closeEditModal" class="absolute top-2 right-2 text-gray-400 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 p-2 w-10 rounded-full" aria-label="Close Edit Category Modal">
                <i class="fas fa-times dark:text-white"></i>
            </button>
        </div>
        <p class="mb-4 text-sm text-gray-500 dark:text-gray-400">Fill out all the fields below to edit the category.</p>

        <form id="editCategoryForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CategoryId" id="editId" />

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 inline">Type</label>
                <span class="text-gray-500 dark:text-gray-400 text-xs inline-block mb-2">(Select A type)</span>
                <div class="flex space-x-4">
                    <button type="button" id="editExpenseButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800 ">Expense</button>
                    <button type="button" id="editIncomeButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800 ">Income</button>
                </div>
                <input type="hidden" name="Type" id="editTypeInput" />
            </div>

            <div class="mb-6">
                <label for="editName" class="block text-sm font-medium dark:text-gray-300">Name</label>
                <input type="text" name="Name" id="editName" placeholder="Enter Name" class="mt-1 block w-full px-4 py-2 border rounded-md  dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
            </div>

            <div class="mb-6">
                <label for="editIcon" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Icon</label>
                <select name="Icon" id="editIcon" class="mt-1 block w-full px-4 py-2 border rounded-md dark:bg-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    <option value="" class=" dark:text-gray-400">Select Icon</option>
                    <option value="fas fa-apple-alt" class="dark:text-gray-400">Apple (Food)</option>
                    <option value="fas fa-shopping-bag" class="dark:text-gray-400">Shopping Bag</option>
                    <option value="fas fa-bolt" class="dark:text-gray-400">Bolt (Electricity)</option>
                    <option value="fas fa-wallet" class="dark:text-gray-400">Wallet (Income)</option>
                    <option value="fas fa-money-bill-wave" class="dark:text-gray-400">Money (Expense)</option>
                </select>
            </div>

            <div class="mb-6">
                <label for="editColorPicker" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Select Color</label>
                <input type="color" name="Color" id="editColorPicker" class="mt-1 block w-full h-12 border rounded-md  dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
            </div>

            <div class="flex justify-between mt-6">
                <button type="submit" class="bg-blue-500 dark:bg-blue-700 hover:bg-blue-700 dark:hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-md">Save</button>
                <button type="button" class="bg-red-500 dark:bg-red-700 hover:bg-red-700 dark:hover:bg-red-800 text-white font-bold py-3 px-6 rounded-md" id="deleteButton">Delete</button>
            </div>
        </form>
    </div>
</div>
