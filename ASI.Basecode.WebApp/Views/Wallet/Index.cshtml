@model List<ASI.Basecode.Services.ServiceModels.WalletViewModel>


@{
    ViewData["Title"] = "Wallet Page";
}

@section styles {
    <link rel="stylesheet" href="~/css/wallet.css">
}

@section scripts {
    <script src="~/js/wallet.js"></script>
}

<!-- Content -->
<div class="flex-1 p-6 bg-gray-50">
    <!-- Search Bar -->
    <div class="flex justify-between items-center mt-2">
        <input type="text" placeholder="Search here..." class="w-1/3 p-2 border border-gray-300 rounded-lg">
    </div>

    <!-- Total Balance Section -->
    <div id="balanceSection" class="mb-6">
        <h2 class="text-2xl font-bold">Total Balance: ₱@ViewBag.TotalDebit.ToString("0.00")</h2>
    </div>

    <!-- Add New Account Button and Account Title -->
    <div class="flex justify-between items-center my-4">
        <h2 id="accountPageTitle" class="font-bold text-2xl">Wallets</h2>
    </div>

    @Html.Partial("Details")
</div>

@Html.Partial("Create")

@Html.Partial("Edit")