@model List<ASI.Basecode.Services.ServiceModels.WalletViewModel>


@{
    ViewData["Title"] = "Create";
}


<!-- Add Account Modal -->
<div id="addAccountModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
    <div class="bg-white p-6 rounded-lg w-full max-w-lg mx-auto relative" id="modalContent">
        <button id="closeAddModal" class="absolute top-2 right-2 text-gray-400 hover:bg-gray-200 p-2 w-10 rounded-full">
            <i class="fas fa-times"></i>
        </button>
        <h2 class="text-xl font-bold mb-4">Add Wallet</h2>
        <form id="addAccountForm">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <div id="addFormFields"></div>
                <div class="text-right mt-4">
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white">Confirm</button>
                </div>
            </div>
        </form>
    </div>
</div>
