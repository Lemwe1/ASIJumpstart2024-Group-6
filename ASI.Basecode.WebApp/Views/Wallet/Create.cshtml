@model List<ASI.Basecode.Services.ServiceModels.WalletViewModel>


@{
    ViewData["Title"] = "Create";
}


<!-- Add Account Modal -->
<div id="addAccountModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
    <div class="modal-content bg-gray-300 dark:bg-gray-700 p-6 rounded-lg w-full max-w-lg mx-auto relative" id="modalContent">
        <button id="closeAddModal" class="absolute top-2 right-2 text-gray-400 hover:bg-gray-200 p-2 w-10 rounded-full">
            <i class="fas fa-times"></i>
        </button>
        <h2 class="text-2xl font-bold dark:text-white my-2">Add Wallet</h2>
        <p class="text-gray-600 mb-4 dark:text-gray-300">Fill out all the fields below to add a wallet</p>
        <form id="addAccountForm">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <div id="addFormFields"></div>
                <!-- Submit and Reset Buttons -->
                <div class="flex mt-6">
                    <button type="button" id="resetWalletButton" class="w-1/2 mr-3 bg-gray-200  text-gray-800 hover:bg-gray-300  py-3 rounded-md">
                        Reset
                    </button>

                    <button type="submit" class="w-1/2 ml-3 bg-blue-500 hover:bg-blue-700 text-white  py-3 rounded-md">
                        Confirm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
