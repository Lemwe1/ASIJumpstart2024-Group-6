@{
    ViewData["Title"] = "Details";
}
@using ASI.Basecode.Services.ServiceModels

<div class="shadow-md">
    <table class="transaction-table w-full bg-white rounded-lg">
        <thead class="bg-gray-200">
            <tr>
                <th class="p-4">Category</th>
                <th class="p-4">Type</th>
                <th class="p-4">Amount</th>
                <th class="p-4">Wallet</th>
                <th class="p-4">Date</th>
                <th col ="7"class="p-4">Note</th>
                <th class="p-4">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["Transactions"] is List<TransactionViewModel> transactions)
            {
                if (transactions.Count > 0)
                {
                    @Html.AntiForgeryToken()
                    foreach (var transaction in transactions)
                    {
                        <tr data-category="@transaction.CategoryId">
                            <td class="px-4 py-4 w-1/6">
                                <div class="flex items-center space-x-4">
                                    <span class="flex items-center justify-center p-2 w-12 h-12 rounded-full border border-gray-300" style="background-color: @transaction.CategoryColor;">
                                        <i class="@transaction.CategoryIcon" style="color: white;"></i>
                                    </span>
                                    <span>@transaction.CategoryName</span>
                                </div>
                            </td>

                            <td class="pl-4 pr-2 py-3 w-1/6">
                                <span class="inline-block px-2 py-1 @(transaction.TransactionType == "Expense" ? "bg-red-400 text-white" : "bg-green-500 text-white") rounded">
                                    @transaction.TransactionType
                                </span>
                            </td>

                            <td class="px-4 py-4 w-1/6">
                                <div class="flex items-center space-x-1">

                                    @if (transaction.TransactionType == "Expense")
                                    {
                                        <span>-₱</span>
                                        <span>@transaction.Amount</span>
                                    }
                                    else
                                    {
                                        <span>&nbsp;₱</span>
                                        <span>@transaction.Amount</span>
                                    }
                                </div>
                            </td>

                            <td class="px-4 py-4 w-1/6">
                                <div class="flex items-center space-x-4">
                                    <span class="flex items-center justify-center p-2 w-12 h-12 rounded-full border border-gray-300" style="background-color: @transaction.WalletColor;">
                                        <i class="@transaction.WalletIcon" style="color: white;"></i>
                                    </span>
                                    <span>@transaction.WalletName</span>
                                </div>
                            </td>

                            <td class="px-4 py-3 w-1/6">@transaction.TransactionDate.ToShortDateString()</td>
                            <td class="px-4 py-3 w-2/6">@transaction.Note</td>
                            <td class="px-4 py-3">
                                <div class="flex space-x-2">
                                    <button data-id="@transaction.TransactionId"
                                            class="editTransaction border-2 border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-3 py-1 rounded-lg transition duration-150 flex items-center">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </button>
                                    <button data-id="@transaction.TransactionId"
                                            class="border-2 border-red-500 text-red-500 hover:bg-red-500 hover:text-white px-2 py-1 rounded-lg transition duration-150 deleteTransaction flex items-center">
                                        <i class="fas fa-trash-alt mr-1"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                   <tr class="empty-row px-4 py-3 text-center" colspan="7"> 
                    <td colspan="7" class="px-4 py-3 text-center">No entries yet.</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
