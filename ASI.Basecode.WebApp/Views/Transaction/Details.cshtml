@{
    ViewData["Title"] = "Details";
}
@using ASI.Basecode.Services.ServiceModels

<div class="overflow-x-auto shadow-md">
    <table class="transaction-table bg-white rounded-lg w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="p-4 text-left">Category</th>
                <th class="p-4 text-left">Amount</th>
                <th class="p-4 text-left">Wallet</th>
                <th class="p-4 text-left">Date</th>
                <th class="p-4 text-left">Note</th>
                <th class="p-4 text-left">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["Transactions"] is List<TransactionViewModel> transactions)
            {
                if (transactions.Count > 0)
                {
                    @Html.AntiForgeryToken()
                    foreach (var transaction in transactions)
                    {
                        <tr data-category="@transaction.CategoryId" class="border-b odd:bg-white even:bg-gray-100">
                            <td class="px-4 py-4 w-1/6 whitespace-nowrap">
                                <div class="flex items-center space-x-4">
                                    <span class="flex items-center justify-center p-2 w-12 h-12 rounded-full border border-gray-300" style="background-color: @transaction.CategoryColor;">
                                        <i class="@transaction.CategoryIcon text-white"></i>
                                    </span>
                                    <span>@transaction.CategoryName</span>
                                </div>
                            </td>

                            <td class="px-4 py-4 w-1/6 whitespace-nowrap">
                                <div class="flex items-center space-x-1">
                                    @if (transaction.TransactionType == "Expense")
                                    {
                                        <div class="bg-red-400 text-white px-2 py-1 rounded">
                                            <span>-₱@transaction.Amount</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="bg-green-400 text-white px-2 py-1 rounded">
                                            <span>₱@transaction.Amount</span>
                                        </div>
                                    }
                                </div>
                            </td>

                            <td class="px-4 py-4 w-1/6 whitespace-nowrap">
                                <div class="flex items-center space-x-4">
                                    <span class="flex items-center justify-center p-2 w-12 h-12 rounded-full border border-gray-300" style="background-color: @transaction.WalletColor;">
                                        <i class="@transaction.WalletIcon text-white"></i>
                                    </span>
                                    <span>@transaction.WalletName</span>
                                </div>
                            </td>

                            <td class="px-4 py-3 w-1/6">@transaction.TransactionDate.ToShortDateString()</td>
                            <td class="px-4 py-3 w-2/6">@(!string.IsNullOrEmpty(transaction.Note) ? transaction.Note : "N/A")</td>

                            <td class="px-4 py-3">
                                <div class="flex space-x-2">
                                    <button data-id="@transaction.TransactionId"
                                            class="editTransaction border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-3 py-1 rounded-lg transition duration-150 flex items-center">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </button>
                                    <button data-id="@transaction.TransactionId"
                                            class="border border-red-500 text-red-500 hover:bg-red-500 hover:text-white px-3 py-1 rounded-lg transition duration-150 deleteTransaction flex items-center">
                                        <i class="fas fa-trash-alt mr-1"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-4 py-3 text-center">No entries yet.</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
