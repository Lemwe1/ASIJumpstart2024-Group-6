@{
    ViewData["Title"] = "Edit";
}

@using ASI.Basecode.Data.Models
@using ASI.Basecode.Services.ServiceModels

<!-- Modal Structure -->
<div id="editTransactionModal" class="modal fixed inset-0 bg-gray-800 bg-opacity-50 items-center justify-center hidden z-50">
    <div id="editModalContent" class="modal-content bg-white p-6 rounded-lg shadow-lg w-full max-w-md mx-auto">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold">Edit Transaction</h2>
            <button id="closeEditTransactionModal" class="text-gray-400 hover:bg-gray-200 p-2 w-10">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <p class="text-gray-600 mb-4">Update the fields below to edit the transaction</p>

        <form id="editTransactionForm" method="post" action="/Transaction/Edit">
            @Html.AntiForgeryToken()

             <input type="hidden" name="TransactionId" id="editTransactionId" />
            <!-- Amount Field -->
            <div class="mb-6">
                <label for="editTransactionAmount" class="block text-sm font-medium text-gray-700">Amount</label>
                <input type="number"  step="0.01" id="editTransactionAmount" name="Amount" placeholder="Enter amount" required class="mt-1 block w-full px-4 py-2 border rounded-md bg-white text-gray-900" />
            </div>
            <!-- Type Field -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                <div class="flex space-x-4">
                    <button type="button" id="editExpenseButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800 hover:bg-gray-300">Expense</button>
                    <button type="button" id="editIncomeButton" class="type-button px-4 py-2 border rounded-md bg-gray-200 text-gray-800 hover:bg-gray-300">Income</button>
                </div>
                <input type="hidden" name="Type" id="editTransactionType" value="Expense" />
            </div>

            <!-- Category Field -->
            <div class="mb-6">
                <label for="editTransactionCategory" class="block text-sm font-medium text-gray-700">Category</label>
                <select id="editTransactionCategory" name="CategoryId" required class="mt-1 block w-full px-4 py-2 border rounded-md bg-white text-gray-900">
                    <option value="" disabled>Select category</option>

                    @if (ViewData["Categories"] is List<MCategory> categories && categories.Any())
                    {
                        foreach (var category in categories)
                        {
                            <option value="@category.CategoryId" data-type="@category.Type">@category.Name</option>
                        }
                    }
                    else
                    {
                        <option value="" disabled>No Entries yet</option>
                    }

                </select>
            </div>

            <!-- Account Field -->
            <div class="mb-6">
                <label for="editTransactionAccount" class="block text-sm font-medium text-gray-700">Account</label>
                <select id="editTransactionAccount" name="DeLiId" required class="mt-1 block w-full px-4 py-2 border rounded-md bg-white text-gray-900">
                    <option value="" disabled>Select account</option>

                    @if (ViewData["DebitLiabilities"] is List<DebitLiabilityViewModel> debitLiabilities && debitLiabilities.Any())
                    {
                        // Filter only borrowed accounts
                        var borrowedAccounts = debitLiabilities.Where(account => account.DeLiType == "debit").ToList();
                        if (borrowedAccounts.Any())
                        {
                            foreach (var account in borrowedAccounts)
                            {
                                <option value="@account.DeLiId" data-type="@account.DeLiType">@account.DeLiName</option>
                            }
                        }
                        else
                        {
                            <option value="" disabled>No borrowed accounts available</option>
                        }
                    }
                    else
                    {
                        <option value="" disabled>No Entries yet</option>
                    }
                </select>
            </div>


            <!-- Date Field -->
            <div class="mb-6">
                <label for="editTransactionDate" class="block text-sm font-medium text-gray-700">Date</label>
                <input type="date" id="editTransactionDate" name="TransactionDate" required class="mt-1 block w-full px-4 py-2 border rounded-md bg-white text-gray-900" />
            </div>

            <!-- Note Field -->
            <div class="mb-6">
                <label for="editTransactionNote" class="block text-sm font-medium text-gray-700">Note</label>
                <textarea id="editTransactionNote" name="Note" placeholder="Enter note" rows="4" class="mt-1 block w-full px-4 py-2 border rounded-md bg-white text-gray-900"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex mt-6">
                <button type="submit" class="w-1/2 mr-3 bg-blue-500 hover:bg-blue-700 text-white  py-3 rounded-md">
                    Confirm
                </button>
                <button type="button" id="resetTransactionForm" class="w-1/2 ml-3 border-2 border-gray-500 text-gray-500 hover:bg-gray-100  py-3 rounded-md">
                    Reset
                </button>

            </div>
        </form>
    </div>
</div>
