@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Resend Verification Link";
}

<div class="flex h-screen bg-gray-50 dark:bg-gray-900 relative">
    <div class="hidden lg:flex lg:w-1/2">
        <img src="~/img/spendwise-banner.svg" alt="Banner" class="w-full h-full object-cover" />
    </div>
    <div class="flex items-center justify-center w-full lg:w-1/2 p-6">
        <div class="relative rounded-lg shadow dark:bg-gray-800 w-full max-w-md lg:max-w-lg mx-auto min-h-[400px] sm:min-h-[450px] md:min-h-[500px] lg:min-h-[600px] flex flex-col p-8 space-y-4">
            <!-- Logo -->
            <div class="flex justify-between items-center mb-4">
                <img src="~/img/logo.svg" class="w-48 mx-auto" alt="logo">
            </div>

            <!-- Heading -->
            <h2 class="text-center text-2xl font-bold text-gray-900 dark:text-white mb-4">Resend Verification Link</h2>

            <p class="text-center text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">
                Enter your email to request a new verification link.
            </p>

            <!-- Resend Verification Form -->
            <form asp-action="ResendVerificationEmail" method="post" class="space-y-4">
                <div>
                    <input type="email" name="email" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Enter your email" required />
                </div>
                <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Resend Verification Link
                </button>
            </form>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="text-center text-green-500 dark:text-green-400 font-semibold mt-4">
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="text-center text-red-500 dark:text-red-400 font-semibold mt-4">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Back to Login -->
            <div class="text-center mt-6">
                <a href="@Url.Action("Login", "Account")" class="text-primary-600 hover:underline dark:text-primary-400">Go to Login</a>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/accountDarkmode.js"></script>
}