@model ASI.Basecode.Services.ServiceModels.ResetPasswordViewModel

@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Reset Password";
}

<div class="flex h-screen bg-gray-50 dark:bg-gray-900 relative">
    <div class="hidden lg:flex lg:w-1/2">
        <img src="~/img/spendwise-banner.svg" alt="Banner" class="w-full h-full object-cover" />
    </div>
    <div class="flex items-center justify-center w-full lg:w-1/2 p-6">
        <div class="relative rounded-lg shadow dark:bg-gray-800 w-full max-w-md lg:max-w-lg mx-auto min-h-[400px] sm:min-h-[450px] md:min-h-[500px] lg:min-h-[600px] flex flex-col p-8 space-y-4">
            <!-- Logo -->
            <div class="flex justify-between items-center mb-4">
                <img src="~/img/logo.svg" class="w-48 mx-auto" alt="logo">
            </div>

            <!-- Heading -->
            <h2 class="text-center text-2xl font-bold text-gray-900 dark:text-white mb-4">Reset Password</h2>

            <!-- Error message container -->
            <div id="error-message" class="text-center text-red-500 dark:text-red-400 text-sm font-semibold">
                @if (ViewBag.ErrorMessage != null)
                {
                    <span>@ViewBag.ErrorMessage</span>
                }
            </div>

            <!-- Success message container -->
            <div id="success-message" class="text-center text-green-500 dark:text-green-400 text-sm font-semibold">
                @if (ViewBag.SuccessMessage != null)
                {
                    <span>@ViewBag.SuccessMessage</span>
                }
            </div>

            <!-- Reset Password Form -->
            <form asp-action="ResetPassword" method="post" class="space-y-4" id="reset-password-form">
                <input type="hidden" asp-for="Token" />

                <div class="relative">
                    <label asp-for="NewPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">New Password</label>
                    <div class="relative">
                        <input asp-for="NewPassword" type="password" placeholder="Enter new password"
                               id="new-password-field"
                               class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white pr-10" />
                        <i id="toggle-new-password" class="fas fa-eye-slash absolute bottom-1 right-3 transform -translate-y-1/2 cursor-pointer text-gray-500"></i>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="relative">
                    <label asp-for="ConfirmPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm new password"
                               id="confirm-password-field"
                               class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white pr-10" />
                        <i id="toggle-confirm-password" class="fas fa-eye-slash absolute bottom-1 right-3 transform -translate-y-1/2 cursor-pointer text-gray-500"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" id="reset-password-btn" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
</div>


<!-- Loading Overlay -->
<div id="overlay" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex justify-center items-center">
    <div class="loader ease-linear rounded-full border-4 border-t-4 border-gray-200 h-12 w-12"></div>
</div>

@section Scripts {
    <script>
        // This script will show the overlay after the button is clicked
        $(document).ready(function () {
            $('#reset-password-btn').on('click', function (e) {
                e.preventDefault();  // Prevent form submission until the overlay is shown

                // Change button text to 'Redirecting to login...'
                $('#reset-password-btn').text('Redirecting to login...');

                // Show the overlay
                $('#overlay').removeClass('hidden');

                // Redirect to the login page after 3 seconds
                setTimeout(function () {
                    window.location.href = '@Url.Action("Login", "Account")';
                }, 3000);
            });

            // Toggle New Password visibility
            const newPasswordField = document.getElementById('new-password-field');
            const toggleNewPassword = document.getElementById('toggle-new-password');
            toggleNewPassword.addEventListener('click', function () {
                if (newPasswordField.type === "password") {
                    newPasswordField.type = "text";
                    toggleNewPassword.classList.replace('fa-eye-slash', 'fa-eye');
                } else {
                    newPasswordField.type = "password";
                    toggleNewPassword.classList.replace('fa-eye', 'fa-eye-slash');
                }
            });

            // Toggle Confirm Password visibility
            const confirmPasswordField = document.getElementById('confirm-password-field');
            const toggleConfirmPassword = document.getElementById('toggle-confirm-password');
            toggleConfirmPassword.addEventListener('click', function () {
                if (confirmPasswordField.type === "password") {
                    confirmPasswordField.type = "text";
                    toggleConfirmPassword.classList.replace('fa-eye-slash', 'fa-eye');
                } else {
                    confirmPasswordField.type = "password";
                    toggleConfirmPassword.classList.replace('fa-eye', 'fa-eye-slash');
                }
            });
        });
    </script>

    <script src="~/js/accountDarkmode.js"></script>
}
<style>
    /* Loader Spinner */
    .loader {
        border-top-color: #3498db; /* Adjust to your primary color */
        animation: spin 1s linear infinite;
    }
</style>

