@using static ASI.Basecode.Resources.Views.Screen
@using ASI.Basecode.Services.ServiceModels
@model ASI.Basecode.Services.ServiceModels.ForgotPasswordViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Forgot Password";
}

<div class="flex h-screen bg-gray-50 dark:bg-gray-900 relative">
    <div class="hidden lg:flex lg:w-1/2">
        <img src="~/img/spendwise-banner.svg" alt="Banner" class="w-full h-full object-cover" />
    </div>
    <div class="flex items-center justify-center w-full lg:w-1/2 p-6">
        <div class="relative rounded-lg shadow dark:bg-gray-800 w-full max-w-md lg:max-w-lg mx-auto min-h-[400px] sm:min-h-[450px] md:min-h-[500px] lg:min-h-[600px] flex flex-col p-8 space-y-4">
            <!-- Logo -->
            <div class="flex justify-between items-center mb-4">
                <img src="~/img/logo.svg" class="w-48 mx-auto" alt="logo">
            </div>

            <!-- Heading -->
            <h2 class="text-center text-2xl font-bold text-gray-900 dark:text-white mb-4">Forgot Password</h2>

            <!-- Success Message Container -->
            <div id="success-message" class="hidden text-center text-green-500 dark:text-green-400 text-sm font-semibold">
                <span></span> 
            </div>

            <!-- Error Message Container -->
            <div id="error-message" class="hidden text-center text-red-500 dark:text-red-400 text-sm font-semibold">
                <span></span> 
            </div>

            <!-- Forgot Password Form -->
            <form asp-action="ForgotPassword" method="post" class="space-y-4" id="forgotPasswordForm">
                <div>
                    <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                    <input asp-for="Email" type="email" placeholder="Enter your email"
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button id="submitBtn" type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Submit
                </button>

                <!-- Go back to Login Link -->
                <div class="text-center">
                    <a asp-controller="Account" asp-action="Login" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex justify-center items-center">
        <div class="loader ease-linear rounded-full border-4 border-t-4 border-gray-200 h-12 w-12"></div>
    </div>
</div>

@section scripts {
    <script src="~/js/accountDarkmode.js"></script>

    <script>
        $(document).ready(function () {
            $('#forgotPasswordForm').on('submit', function (e) {
                e.preventDefault(); // Prevent the default form submission

                // Show the loading overlay
                $('#loading-overlay').removeClass('hidden');

                // Retrieve messages from TempData rendered into the page
                var successMessage = '@TempData["SuccessMessage"]';
                var errorMessage = '@TempData["ErrorMessage"]';

                // Clear previous messages
                $('#success-message').addClass('hidden').find('span').text('');
                $('#error-message').addClass('hidden').find('span').text('');

                // Display success message if available
                if (successMessage && successMessage.trim() !== '') {
                    $('#success-message').removeClass('hidden').find('span').text(successMessage);
                    toastr.success(successMessage); // Optional toast notification
                }

                // Display error message if available
                if (errorMessage && errorMessage.trim() !== '') {
                    $('#error-message').removeClass('hidden').find('span').text(errorMessage);
                    toastr.error(errorMessage); // Optional toast notification
                }

                // Optionally submit the form after displaying messages
                setTimeout(function () {
                    $('#loading-overlay').addClass('hidden'); // Hide the loading overlay
                    $('#forgotPasswordForm')[0].submit(); // Submit the form
                }, 1000); // 1-second delay before submitting
            });
        });
    </script>
}

<style>
/* Loader Spinner */
.loader {
    border-top-color: #3498db; /* Adjust to your primary color */
    animation: spin 1s linear infinite;
}
</style>
